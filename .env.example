# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-region.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Vector Store Selection
# Options: "chroma" (Local) or "azure_search" (Production)
VECTOR_STORE_TYPE=azure_search

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-key-here
AZURE_SEARCH_INDEX_NAME=project-14-index

AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Azure Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;...
AZURE_STORAGE_CONTAINER_NAME=travel-search

# Azure Content Safety (Optional)
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-region.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_KEY=your-content-safety-key-here

# MLflow Configuration
MLFLOW_TRACKING_URI=http://127.0.0.1:5000/
MLFLOW_EXPERIMENT_NAME=travel

# Ingestion Settings (0 = process all images, any number > 0 = limit)
INGESTION_LIMIT=10

# Azure Monitor / Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...
